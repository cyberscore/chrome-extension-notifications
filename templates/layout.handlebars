<header>
  <div class="brand">
    Cyberscore Notifications
  </div>
  Welcome, <strong>{{ username }}</strong>
</header>

<div class="table-container">
  <section class="toolbar">
    <button><i class="icon-bookmark icon-2x"></i></button>
    <button><i class="icon-bookmark-empty icon-2x"></i></button>
    <button class="btn"><i class="icon-trash icon-2x"></i></button>
  </section>

  {{#if total }}
  {{else }}
    <div class="zero-notifications">
      <h1>No notifications :C</h1>
    </div>
  {{/if }}

  {{#each notifications }}
    {{> notification-table }}
  {{/each }}
</div>
