<div class="table-container">
<table>
    <caption>{{fullType this }}</caption>
    <thead>
        <tr>
            <td></td>
            <td>Date</td>
            <td>Game</td>
            <td>Chart</td>
        </tr>
    </thead>
    <tbody>
      {{#each this }}
        <tr {{#if unread }}class="unread"{{/if }}>
            <td><input type="checkbox"></td>
            <td>{{formatDate timestamp }}</td>
            <td><a target="_blank" href="{{ game.link }}">{{ game.name }}</a></td>
            <td><a target="_blank" href="{{ chart.link }}">{{ chart.name }}</a></td>
        </tr>
      {{/each }}
    </tbody>
</table>
</div>