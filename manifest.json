{ "manifest_version": 2

, "name": "Cyberscore Notifications"
, "description": "Keep up to date with your notifications with this handy extension."
, "version": "0.1.0"

, "icons": { "16":  "images/icon16.png"
           , "48":  "images/icon48.png"
           , "128": "images/icon128.png"
           }

, "permissions": [ "alarms"
                 , "storage"
                 , "background"
                 , "notifications"
                 , "http://api.dev/"
                 , "http://cs-api.herokuapp.com/"
                 ]

, "browser_action": { "default_icon": { "19": "images/icon19.png"
                                      , "38": "images/icon48.png"
                                      }
                    , "default_title": "Cyberscore Notifications"
                    , "default_popup": "popup.html"
                    }

, "background": { "scripts":    [ "js/eventPage.js"
                                , "js/lodash.custom.min.js"
                                ]
                , "persistent": false
                }

, "options_page": "options.html"
}
